{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-sass-guidelines",
    "stylelint-config-concentric-order"
  ],
  "ignoreFiles": ["+(build|node_modules|public)/**/*", "src/**/*.css"],
  "rules": {
    "color-hex-case": "upper",
    "order/properties-alphabetical-order": null,
    "selector-max-id": 0
  }
}
